@{
    ViewData["Title"] = "Chat";
}

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-3">&nbsp;</div>
        <div class="col-9">
            To user.......<input type="text" id="userInput" />
